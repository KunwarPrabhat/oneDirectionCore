<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <PublishSingleFile>false</PublishSingleFile>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="od_core.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <IncludeInSingleFile>false</IncludeInSingleFile>
    </None>

    <None Include="libgcc_s_seh-1.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <IncludeInSingleFile>false</IncludeInSingleFile>
    </None>
    <None Include="libstdc++-6.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <IncludeInSingleFile>false</IncludeInSingleFile>
    </None>
    <None Include="libwinpthread-1.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <IncludeInSingleFile>true</IncludeInSingleFile>
    </None>

  </ItemGroup>

</Project>
